<p id="notice"><%= notice %></p>

<h1>Help Page</h1>
<h1>StaticPages#help</h1>
<p>Find me in app/views/static_pages/help.html.erb</p>


<table class="table table-responsive">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @help_pages.each do |help_page| %>
      <tr>
        <td><%= link_to 'Show', help_page , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Edit', edit_help_page_path(help_page) , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', help_page, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Help Page', new_help_page_path , class:"btn btn-xs btn-danger" %>
